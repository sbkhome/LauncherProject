<?xml version="1.0" encoding="utf-8"?>
<com.android.bks.launcher.DragLayer xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drag_layer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Workspace area -->
        <com.android.bks.launcher.Workspace
            android:id="@+id/workspace"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#0000FF" /> <!-- Blue for debug -->

        <!-- Bottom area (Hotseat + Search bar) -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#222222"
            android:paddingBottom="48dp"> <!-- keep above nav bar -->

            <!-- Hotseat -->
            <com.android.bks.launcher.Hotseat
                android:id="@+id/hotseat"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="#FF0000" /> <!-- Red for debug -->

            <!-- Search bar -->
            <TextView
                android:id="@+id/search_text"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="Google Search"
                android:textColor="#FFFFFF"
                android:background="#333333" />
        </LinearLayout>
    </LinearLayout>

    <!-- All Apps (overlay, hidden by default) -->
    <com.android.bks.launcher.AllAppsContainerView
        android:id="@+id/all_apps_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#AA000000"/>
</com.android.bks.launcher.DragLayer>
